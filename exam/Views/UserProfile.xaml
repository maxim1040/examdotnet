<Page x:Class="exam.Views.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfile">

    <Grid Background="#FFE6B7B7">
        <TextBlock x:Name="txtUsername"  HorizontalAlignment="Center" Height="87" TextWrapping="Wrap"  VerticalAlignment="Top" Width="394" RenderTransformOrigin="0.5,0.588" FontSize="36" TextAlignment="Center" Margin="0,107,0,0"/>
        <Label Content="Welcome to your profile" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Right" Margin="0,30,30,0" VerticalAlignment="Top" Width="61" FontSize="18" Click="Logoutclick"/>

        <Label Content="You have : " HorizontalAlignment="Center" Height="50" Margin="0,240,200,0" VerticalAlignment="Top" Width="195" FontSize="36"/>
        <TextBlock x:Name="txtPoints" HorizontalAlignment="Center" Height="50" Margin="200,247,0,0" VerticalAlignment="Top" Width="195" FontSize="36"/>
    </Grid>
</Page>
