        <PasswordBox x:Name="txtConpassword" PasswordChar="●" HorizontalAlignment="Left" Margin="179,270,0,0" VerticalAlignment="Top" Width="221"/>
        <Button x:Name="btnLog" Content="Login" HorizontalAlignment="Left" Margin="203,326,0,0" VerticalAlignment="Top" Height="32" Width="96" RenderTransformOrigin="0.475,0.078"/>
