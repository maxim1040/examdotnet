<Page x:Class="exam.Views.Leaderboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Leaderboard" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Grid Background="Transparent">
        <DataGrid x:Name="MyDataGrid" 
                  RowBackground="Transparent" 
                  FontSize="30" 
                  Background="Transparent" 
                  HeadersVisibility="Column" 
                  MaxHeight="550" 
                  Margin="10,10,10,10" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch"
                  IsReadOnly="True"
                  PreviewMouseLeftButtonDown="MyDataGrid_PreviewMouseLeftButtonDown"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeColumns="False" 
                  CanUserResizeRows="False"/>
    </Grid>

</Page>
